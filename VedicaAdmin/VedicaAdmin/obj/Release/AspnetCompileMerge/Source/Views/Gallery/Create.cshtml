@model VedicaModel.Gallery

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Gallery Images Upload
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Account/Home"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Gallery Images Upload</li>
    </ol>

</section>

    <div class="col-md-12">
    <hr />
    <div class="box box-body">
        <div class="form-group">
            <label>Image</label>
            <input type="file" name="file" id="flUpload" />
        </div>
        <div class="form-group">
            <a href="@Url.Action("Index")" class="btn btn-sm btn-info"><i class="fa fa-backward"></i> Back to List</a>
            <button class="btn btn-sm btn-success" id="btnUploadGalleryImage" onclick="uploadGalleryImages()"><i class="fa fa-upload"></i> Upload</button>
        </div>
    </div>
</div>
<script type="text/javascript">
    function uploadGalleryImages() {
        $.ajax({
            url: "/Gallery/UplaodFile",
            dataType: "text",
            type: "POST",
            data: { fileName: $('#flUpload').get(0).files[0].name, fileType: $('#flUpload').get(0).files[0].name.split('.')[1], size: $('#flUpload').get(0).files[0].size },
            success: function (data) {
                upload($('#flUpload').get(0).files[0], data);
                window.location.href = "/Gallery";
            },
            error: function (data) {

            }
        });
    }
    
</script>