@model VedicaModel.SliderImages
@{
    ViewBag.Title = "AddImages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Add Images
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Account/Home"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Add Images</li>
    </ol>

</section>
@using (Html.BeginForm("AddImages", "SliderImage", FormMethod.Post, new
{
    enctype = "multipart/form-data"
}))
{
    <div class="col-md-12">
        <hr />
        <div class="box box-body">
            <div class="form-group">
                <label>Caption Heading</label>
                @Html.TextBoxFor(model => model.CaptionHeading, new { @class="form-control" })
            </div>
            <div class="form-group">
                <label>Caption Details</label>
                @Html.TextBoxFor(model => model.CaptionDetails, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Image</label>
                <input type="file" name="files" multiple />
            </div>
            <div class="form-group">
                <a href="@Url.Action("Index")" class="btn btn-sm btn-info"><i class="fa fa-backward"></i> Back to List</a>
                <button class="btn btn-sm btn-success"><i class="fa fa-upload"></i> Upload</button>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    $(function () {
        if (window.FileReader != null) {
            $('#single').hide();
            $('.single').prop('disabled', true);
        } else {
            $('#multiple').hide();
            $('.multiple').prop('disabled', true);
        }
    });
</script>