@model IEnumerable<VedicaModel.SliderImages>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Slider Images Upload
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Account/Home"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Slider Images</li>
    </ol>
</section>

<div class="col-md-12">
    <hr />
    <a href="@Url.Action("AddImages")" class="btn btn-sm btn-info"><i class="fa fa-plus"></i> Add Image(s)</a>
    <div class="table-responsive">
        <table class="table table-bordered table-striped dataTable" id="tblTreatmentDetails">
            <thead>
                <tr>
                    <th>
                        Cation Heading
                    </th>
                    <th>
                        Caption Details
                    </th>
                    <th>
                        Image
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CaptionHeading)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CaptionDetails)
                        </td>
                        <td>
                            <img src="@item.ImageFiles.FilePath" width="100" height="50" />
                        </td>
                        <td>
                            <button id="btnSliderImageDelete-@item.SliderImageId" class="btn btn-xs btn-danger"><i class="fa fa-remove"></i> Delete</button> 
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="modal" id="modalDeleteSliderImages">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Warning <i class="fa fa-warning"></i></h4>
                <input type="hidden" id="hdnDeleteSliderImage" />
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-default pull-left" data-dismiss="modal"><i class="fa fa-close"></i> Close</button>
                <button type="button" class="btn btn-sm btn-primary" data-save="delete"><i class="fa fa-ban"></i> Delete</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<script type="text/javascript">
    $(function () {
        $('#modalDeleteSliderImages .modal-footer > button[data-save="delete"]').on('click', function () {
            deleteSliderImage();
        });
        $('button[id^=btnSliderImageDelete]').on('click', function () {
            var getId = $(this).attr('id').split('-')[1];
            $('#hdnDeleteSliderImage').val(getId);
            $('#modalDeleteSliderImages').modal('show');
        });
    });
    function deleteSliderImage() {
        $.ajax({
            url: "/SliderImage/DeleteImage",
            data: { id: $('#hdnDeleteSliderImage').val() },
            dataType: "json",
            success: function (data) {
                if (data == "true") {
                    $('#modalDeleteSliderImages').modal('hide');
                    window.location.reload();
                }
                else {
                    alert(data);
                }
            },
            error: function (data) {

            }
        });
    }
</script>