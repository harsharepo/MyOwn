@model VedicaModel.TreatmentDetails

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var lstTreatments = ViewBag.Treatments as List<SelectListItem>;
}

<section class="content-header">
    <h1>
        Edit Treatment Details - @ViewBag.TreatmentName
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Account/Home"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Edit Treatment Details</li>
    </ol>

</section>

@using (Html.BeginForm("Edit", "Treatment", FormMethod.Post, new
{
    enctype = "multipart/form-data"
}))
{
    @Html.AntiForgeryToken()

    <div class="col-md-12">
        <hr />
        <div class="box box-body">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.ImageId)
            @Html.HiddenFor(model => model.OrderId)
            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.Name)
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>

            <div class="form-group col-md-12">
                @Html.LabelFor(model => model.Desription)
                @Html.TextAreaFor(model => model.Desription, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Desription)
            </div>

            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.TreatmentsId, "Treatments Name")
                @Html.DropDownListFor(c => c.TreatmentsId, lstTreatments, new { @class = "select2" })
                @Html.ValidationMessageFor(model => model.Treatments.Name)
            </div>

            <div class="form-group col-md-12">
                @Html.LabelFor(model => model.ImageId, "Image")
                <input type="file" title="search image" id="file" name="file" onchange="show(this)" />
                @{
                    string filePath = string.Empty;
                    if (Model.ImageFiles != null)
                    {
                        filePath = Model.ImageFiles.FilePath;
                        filePath = filePath.Substring(filePath.IndexOf("TreatmentImages"), filePath.Length - filePath.IndexOf("TreatmentImages"));
                        filePath = "\\" + filePath;
                        filePath = filePath.Replace("\\", "/");
                        filePath = VedicaAdmin.Properties.Settings.Default.SliderImagePath + filePath;
                    }
                }
                <div> <img id="user_img" height="100" src="@filePath" width="100" style="border: 1px solid blue" /> </div>
            </div>
            <div class="form-group col-md-6">
                <a href="@Url.Action("Index")" class="btn btn-sm btn-primary"><i class="fa fa-backward"></i> Back to List</a>
                <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-check"></i> Update</button></div>
        </div>
    </div>
}
<script type="text/javascript">
    function show(input) {
        if (input.files && input.files[0]) {
            var filerdr = new FileReader();
            filerdr.onload = function (e) {
                $('#user_img').attr('src', e.target.result);
            }
            filerdr.readAsDataURL(input.files[0]);
        }
    }
</script>