@model VedicaModel.Offers

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Create Offer
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Account/Home"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Create Offer</li>
    </ol>

</section>

@using (Html.BeginForm("Create", "Offers"))
{
    @Html.AntiForgeryToken()

    <div class="col-md-12">
        <hr />
        <div class="box box-body">
            @Html.ValidationSummary(true)

            <div class="form-group">
                <label>Offer Name</label>
                @Html.TextBoxFor(model => model.OfferName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Offer Link</label>
                @Html.TextBoxFor(model => model.OfferLink, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <a href="@Url.Action("Index")" class="btn btn-sm btn-info"><i class="fa fa-backward"></i> Back to List</a>
                <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-check"></i> Create</button>
            </div>
        </div>
    </div>
}
